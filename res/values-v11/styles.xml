<resources>

    <style name="Theme.Sg" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_sg</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Sg</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sg</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Sg</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Sg</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Sg</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_sg</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_sg</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Sg</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Sg.Widget</item>
    </style>

    <style name="ActionBar.Solid.Sg" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_background_textured_sg</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_sg</item>
        <item name="android:backgroundSplit">@drawable/ab_background_textured_sg</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sg</item>
    </style>

    <style name="ActionBar.Transparent.Sg" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_sg</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Sg</item>
    </style>

    <style name="PopupMenu.Sg" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sg</item>
    </style>

    <style name="DropDownListView.Sg" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sg</item>
    </style>

    <style name="ActionBarTabStyle.Sg" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_sg</item>
    </style>

    <style name="DropDownNav.Sg" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_sg</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sg</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_sg</item>
    </style>

    <style name="ProgressBar.Sg" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sg</item>
    </style>

    <style name="ActionButton.CloseMode.Sg" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_sg</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Sg.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Sg</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Sg</item>
    </style>

</resources>